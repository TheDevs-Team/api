{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },

    "include": ["./src"],

    "exclude": [
      "node_modules",
    ]
}