{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/TheDevs-Team/api.git",
  "author": "gustavo-evaristo <gug.henri1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -T -I node_modules src/server.ts --env.NODE_ENV=DEV",
    "lint": "eslint '*/**/*.{js,jsx,ts,tsx}' --fix ",
    "pretty": "prettier --config ./.prettierrc.js --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "migrate": "ts-node-dev node_modules/typeorm/cli.js "
  },
  "lint-staged": {
    "*/**/*.{js,ts}": [
      "yarn lint",
      "yarn pretty"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged --no-stash",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/sequelize": "^4.28.10",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "4.3.0",
    "install": "^0.13.0",
    "lint-staged": "11.0.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
